@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
}
<br>
<br>
<h1 class="text-center text-light">Customer Profile</h1>
<br>
<p class="form-group align-content-center text-center">
    <a asp-action="Create" class="btn btn-secondary text-light justify-content-md-center text-center">Create New</a>
</p>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickupDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OneTimePickup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspendAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspendStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspendEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickupDay)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.OneTimePickup)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SuspendAccount)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SuspendStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SuspendEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
